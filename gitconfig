[user]
    name = xiaozy
    email = xiaozy01@fenbi.com

[color]
    ui = true
    diff = true
    status = true
    branch = true
    interactive = true

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    who = shortlog -s --
    ll = log --decorate --graph --all
    pl = pull origin master
    lc = diff --name--status --diff-filter=U
    mb = merge --no-ff --log
    bl = blame --color-lines --color-by-age -n
    cp = cherry-pick

    stash-untracked = "!f() {    \
        git stash;               \
        git stash -u;            \
        git stash pop stash@{1}; \
    }; f"

    undo = "!f() {              \
        git reset -- $1;        \
        git co -- $1;           \
    }; f"

    ls-match = "!f() {          \
        git ls-files "*$1*";    \
    }; f"

    df-match = "!f() {          \
        git df -- "*$1*";       \
    }; f"

    discard-changes = "!f() {   \
        git stash;              \
        git stash drop;         \
    }; f"

    push-review = "!f() {      \
        git add .;             \
        git add -u;            \
        git commit --amend -C HEAD; \
        git push review;      \
    }; f"


[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations
    side-by-side = true

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax

[merge]
    tool  = vimdiff

[core]
    excludesfile = git/git-ignore-global
    quotepath = false
	autocrlf = false

[http]
	sslBackend = openssl
[remote "origin"]
	proxy = 127.0.0.1:7890
